<section class="editing_box">
	<h2>Editing Book</h2>
	 <%= form_for(@review) do |f| %>
	 	 <% if @review.errors.any? %>
 		   <h3>入力した内容にエラーが<%= @review.errors.count %>件あります</h3>
 	   	  <ul>
	      <% @review.errors.full_messages.each do |message| %>
       	   <li><%= message %></li>
     	  <% end %>
   		  </ul>
 	 <% end %>


 		<h4>Title</h4>
 		<%= f.text_field :title %>
 		<h4>Body</h4>
 		<%= f.text_area :review %><br>
 		<%= f.submit 'Update Book'%>
 	<% end %>
		<div class="edit_buttons">
			<%= link_to 'Show', review_path %> | <span><%= link_to 'Back', reviews_path %></span>
		</div>
</section>